<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".egzersizeGiris">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/egzersizText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/mekik"
                    android:layout_width="match_parent"
                    android:layout_height="119dp"
                    android:background="@mipmap/m"
                    android:text="mekik"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/şınav"
                    android:layout_width="match_parent"
                    android:layout_height="119dp"
                    android:background="@mipmap/s"
                    android:text="şınav"
                    android:textColor="@android:color/holo_green_dark" />
                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/lunge"
                    android:layout_width="match_parent"
                    android:layout_height="119dp"
                    android:background="@mipmap/lung"
                    android:text="lunge"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/bisiklet"
                    android:layout_width="match_parent"
                    android:layout_height="119dp"
                    android:background="@mipmap/b"
                    android:text="Bisiklet sürme"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/yürüyüş"
                    android:layout_width="match_parent"
                    android:layout_height="119dp"
                    android:background="@mipmap/y"
                    android:text="yürüyüş"
                    android:textColor="@android:color/background_light" />



                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/squat"
                    android:layout_width="match_parent"
                    android:layout_height="119dp"
                    android:background="@mipmap/squat"
                    android:text="squat"
                    android:textColor="@android:color/holo_green_dark" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>