            <TextView
                android:id="@+id/textView382"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView383"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="İnsanın yaşadığı bu doğal ortam, atmosfer (hava küre), litosfer (taş küre), hidrosfer (su küre) ve biyosfer (canlılar küresi) olmak üzere dört temel ortamdan oluşmaktadır.   "
                android:textColor="@color/kahveRengi" />

            <TextView
                android:id="@+id/textView380"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView376"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Doğa ve İnsan Etkileşimi "
